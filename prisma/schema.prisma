// En este archivo se ubica el esquema de prisma, para modelar la base de datos y configurar el cliente de prisma
// La url a la base de datos se obtiene de la variable de entorno DATABASE_URL

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tipo de operacion, usa un enum para definir los posibles tipos
enum OperationType {
  sale
  purchase
}

model Operations {
  id String @id @default(uuid()) @db.Uuid
  type OperationType
  amount Decimal @db.Decimal(12, 2) @default(0)
  date DateTime @default(now()) @db.Timestamp(6)
  user_id String @db.Uuid
  declaration_id String? @db.Uuid

  // Relaciones
  user Users @relation(fields: [user_id], references: [id])
  declaration Declarations? @relation(fields: [declaration_id], references: [id], onDelete: SetNull)
}

// Estado de la declaracion, usa un enum para definir los posibles estados
enum DeclarationStatus {
  pending
  submitted
  accepted
}

model Declarations {
  id String @id @default(uuid()) @db.Uuid
  month String @db.VarChar(7)
  sales_vat Decimal @db.Decimal(12, 2)
  purchases_vat Decimal @db.Decimal(12, 2)
  balance Decimal @db.Decimal(12, 2)
  status DeclarationStatus @default(pending)
  creation_date DateTime @default(now()) @db.Timestamp(6)
  updated_date DateTime @updatedAt @db.Timestamp(6)
  user_id String @db.Uuid

  // Relaciones
  user Users @relation(fields: [user_id], references: [id], onDelete: SetNull)
  operations Operations[]
  @@unique([user_id, month])
}

enum Role {
  admin
  user
}

model Users {
  id String @id @default(uuid()) @db.Uuid
  name String @unique @db.VarChar(100)
  email String @db.VarChar(150) @unique
  role Role @default(user)
  password String @db.VarChar(255)
  declarations Declarations[]
  operations Operations[]
}