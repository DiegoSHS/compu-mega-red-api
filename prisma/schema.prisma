// En este archivo se ubica el esquema de prisma, para modelar la base de datos y configurar el cliente de prisma
// La url a la base de datos se obtiene de la variable de entorno DATABASE_URL

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OperationType {
  sale
  purchase
}

model Operations {
  id String @id @default(uuid()) @db.Uuid
  type OperationType
  amount Decimal @db.Decimal(12, 2) @default(0)
  date Date @default(now()) @db.Date
  user_id String @db.Uuid
  declaration_id String @db.Uuid
}